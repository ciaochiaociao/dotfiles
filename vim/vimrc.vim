" Enable line numbers
set number
set relativenumber

set ignorecase
set smartcase

"set hlsearch
"nnoremap <Esc> :nohlsearch<CR><Esc>

inoremap jk <Esc>
set timeoutlen=300

inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>

inoremap <C-o> <Esc>o
inoremap <C-p> <Esc>p
