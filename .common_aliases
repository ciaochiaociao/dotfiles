cdn () {
    pushd . 
    for ((i=1; i<=$1; i++))
    do
        cd ..
    done
    pwd
}

cdu () {
    cd "${PWD%/$1/*}/$1"
}

checkout () {
    git checkout --recurse-submodules $1 && \
    dvc checkout
}

switch () {
    git switch --recurse-submodules $1 && \
    dvc checkout
}

merge () {
    git merge $1 && \
    git submodule update
}

rebase () {
    git rebase $1 && \
    git submodule update
}

status () {
    echo '> git status' && \
    git status && \
    echo '> git submodule summary' && \
    git submodule summary && \
    echo '> dvc status' && \
    dvc status && \
    echo '> dvc status --cloud' && \
    dvc status --cloud
}

commit () {
    dvc commit &&
    git commit $1 
}

alias dc="docker-compose"

alias gswr='git switch --recurse-submodules'
alias gcor='git checkout --recurse-submodules'
alias gdrd='git diff --submodule=diff'
alias gdr='git diff --submodule'
alias gmn='git merge --no-ff'
echo ".common_aliases file loading successfully! "
